@model NewRent
@{
    ViewData["Title"] = "Добавление брони";
}

<form method="post" class="card border-secondary mt-5">
    <div class="card-header d-flex justify-content-between align-items-center">
        <p class="m-0">Добавление брони</p>
        <a class="btn btn-outline-secondary" asp-controller="AdminTools" asp-action="RentsTable"><i class="bi bi-box-arrow-left"></i></a>
    </div>

    <div class="card-body">
        <div class="form-group">
            <div class="mt-2">
                <label asp-for="@Model.rent.orgnizerEmail" class="form-label"></label>
                <select asp-for="@Model.rent.orgnizerEmail" class="form-select">
                    @{
                        foreach (var obj in Model.users)
                        {
                            <option>@obj.email</option>
                        }
                    }
                </select>
                <span class="text-danger" style="font-size: 14px;" asp-validation-for="@Model.rent.orgnizerEmail"></span>
            </div>

            <div class="mt-2">
                <label asp-for="@Model.rent.roomNumber" class="form-label"></label>
                <select asp-for="@Model.rent.roomNumber" class="form-select">
                    @{
                        foreach (var obj in Model.gameRooms)
                        {
                            <option>@obj.number</option>
                        }
                    }
                </select>
                <span class="text-danger" style="font-size: 14px;" asp-validation-for="@Model.rent.roomNumber"></span>
            </div>

            <div class="mt-2">
                <label asp-for="@Model.rent.timeOf" class="form-label"></label>
                <input asp-for="@Model.rent.timeOf" type="datetime-local" class="form-control">
                <span class="text-danger" style="font-size: 14px;" asp-validation-for="@Model.rent.timeOf"></span>
            </div>

            <div class="mt-2 mb-4">
                <label asp-for="@Model.rent.duration" class="form-label"></label>
                <input asp-for="@Model.rent.duration" type="number" class="form-control" placeholder="Введите продолжительность брони">
                <span class="text-danger" style="font-size: 14px;" asp-validation-for="@Model.rent.duration"></span>
            </div>

            <div class="modal-footer mt-2">
                <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </div>
</form>