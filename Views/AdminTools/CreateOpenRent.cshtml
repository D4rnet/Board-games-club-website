@model NewOpenRent
@{
    ViewData["Title"] = "Добавление открытой брони";
}

<form method="post" class="card border-secondary mt-5">
    <div class="card-header d-flex justify-content-between align-items-center">
        <p class="m-0">Добавление открытой брони</p>
        <a class="btn btn-outline-secondary" asp-controller="AdminTools" asp-action="OpenRentsTable"><i class="bi bi-box-arrow-left"></i></a>
    </div>

    <div class="card-body">
        <div class="form-group">
            <div class="mt-2">
                <label asp-for="@Model.openRent.rentId" class="form-label"></label>
                <select asp-for="@Model.openRent.rentId" class="form-select">
                    @{
                        foreach (var obj in Model.rents)
                        {
                            <option>@obj.id</option>
                        }
                    }
                </select>
                <span class="text-danger" style="font-size: 14px;" asp-validation-for="@Model.openRent.rentId"></span>
            </div>

            <div class="mt-2">
                <label asp-for="@Model.openRent.peopleCount" class="form-label"></label>
                <input asp-for="@Model.openRent.peopleCount" type="number" class="form-control" placeholder="Введите сколько вас будет">
                <span class="text-danger" style="font-size: 14px;" asp-validation-for="@Model.openRent.peopleCount"></span>
            </div>

            <div class="mt-2 mb-4">
                <label asp-for="@Model.openRent.descriptionOf" class="form-label"></label>
                <textarea asp-for="@Model.openRent.descriptionOf" class="form-control" placeholder="Введите описание"></textarea>
                <span class="text-danger" style="font-size: 14px;" asp-validation-for="@Model.openRent.descriptionOf"></span>
            </div>

            <div class="modal-footer mt-2">
                <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </div>
</form>