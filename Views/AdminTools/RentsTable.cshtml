@model IEnumerable<Rent>
@{
    ViewData["Title"] = "Таблица Брони";
}

<div class="container mt-3 p-2">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Список броней</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="AdminTools" asp-action="CreateRent" class="btn btn-secondary">
                Добавить бронь &nbsp; <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>
</div>

<br />
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr class="table-primary">
                <td>Номер</td>
                <td>Адрес электронной почты организатора</td>
                <td>Номер комнаты</td>
                <td>Дата и время брони</td>
                <td>Продолжительность брони</td>
                <td>Цена</td>
                <td width="260px"></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.id</td>
                    <td>@obj.orgnizerEmail</td>
                    <td>@obj.roomNumber</td>
                    <td>@obj.timeOf</td>
                    <td>@obj.duration</td>
                    <td>@obj.price</td>
                    <td>
                        <div class="btn-group">
                            <a asp-controller="AdminTools" asp-action="EditRent" asp-route-id="@obj.id" class="btn btn-secondary">
                                <i class="bi bi-pencil-square"></i> &nbsp; Изменить
                            </a>

                            <a asp-controller="AdminTools" asp-action="DeleteRent" asp-route-id="@obj.id" class="btn btn-danger">
                                <i class="bi bi-trash3"></i> &nbsp; Удалить
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>