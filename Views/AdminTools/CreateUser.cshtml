@model User
@{
    ViewData["Title"] = "Добавление пользователя";
}

<form method="post" class="card border-secondary mt-5">
    <div class="card-header d-flex justify-content-between align-items-center">
        <p class="m-0">Добавление пользователя</p>
        <a class="btn btn-outline-secondary" asp-controller="AdminTools" asp-action="UsersTable"><i class="bi bi-box-arrow-left"></i></a>
    </div>

    <div class="card-body">
        <div class="form-group">
            <div class="mt-2">
                <label asp-for="email" class="form-label"></label>
                <input asp-for="email" type="email" class="form-control" placeholder="Введите электронную почту">
                <span class="text-danger" style="font-size: 14px;" asp-validation-for="email"></span>
            </div>

            <div class="mt-2">
                <label asp-for="passwordOf" class="form-label"></label>
                <input asp-for="passwordOf" type="password" class="form-control" placeholder="Введите пароль">
                <span class="text-danger" style="font-size: 14px;" asp-validation-for="passwordOf"></span>
            </div>

            <div class="mt-2">
                <label asp-for="firstname" class="form-label"></label>
                <input asp-for="firstname" type="text" class="form-control" placeholder="Введите имя">
                <span class="text-danger" style="font-size: 14px;" asp-validation-for="firstname"></span>
            </div>

            <div class="mt-2">
                <label asp-for="lastname" class="form-label"></label>
                <input asp-for="lastname" type="text" class="form-control" placeholder="Введите фамилию">
                <span class="text-danger" style="font-size: 14px;" asp-validation-for="lastname"></span>
            </div>

            <div class="mt-2 mb-4">
                <label asp-for="roleOf" class="form-label"></label>
                <div class="form-check">
                    <input asp-for="roleOf" class="form-check-input" type="radio" value="user" checked="">
                    <label class="form-check-label" for="User">
                        Пользователь
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="roleOf" class="form-check-input" type="radio" value="admin">
                    <label class="form-check-label" for="Admin">
                        Админ
                    </label>
                </div>
                <span class="text-danger" style="font-size: 14px;" asp-validation-for="roleOf"></span>
            </div>

            <div class="modal-footer mt-2">
                <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </div>
</form>