@model User
@{
    ViewData["Title"] = "Удаление пользователя";
}

<form method="post" asp-action="DeleteUser" class="card border-secondary mt-5">
    <div class="card-header d-flex justify-content-between align-items-center">
        <p class="m-0">Удаление пользователя</p>
        <a class="btn btn-outline-secondary" asp-controller="AdminTools" asp-action="UsersTable"><i class="bi bi-box-arrow-left"></i></a>
    </div>

    <div class="card-body">
        <div class="form-group">
            <div class="mt-2">
                <label asp-for="email" class="form-label"></label>
                <input asp-for="email" type="email" class="form-control" placeholder="Введите электронную почту" disabled="">
            </div>

            <div class="mt-2">
                <label asp-for="passwordOf" class="form-label"></label>
                <input asp-for="passwordOf" type="text" class="form-control" placeholder="Введите пароль" disabled="">
            </div>

            <div class="mt-2">
                <label asp-for="firstname" class="form-label"></label>
                <input asp-for="firstname" type="text" class="form-control" placeholder="Введите имя" disabled="">
            </div>

            <div class="mt-2">
                <label asp-for="lastname" class="form-label"></label>
                <input asp-for="lastname" type="text" class="form-control" placeholder="Введите фамилию" disabled="">
            </div>

            <div class="mt-2 mb-4">
                <label asp-for="roleOf" class="form-label"></label>
                <div class="form-check">
                    <input asp-for="roleOf" class="form-check-input" type="radio" value="user" disabled="">
                    <label class="form-check-label" for="User">
                        Пользователь
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="roleOf" class="form-check-input" type="radio" value="admin" disabled="">
                    <label class="form-check-label" for="Admin">
                        Админ
                    </label>
                </div>
            </div>

            <div class="modal-footer mt-2">
                <button type="submit" class="btn btn-danger">Удалить</button>
            </div>
        </div>
    </div>
</form>


