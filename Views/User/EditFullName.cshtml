@model User
@{
    ViewData["Title"] = "Изменение имени и фамилии";
}

<div class="d-flex justify-content-center">
    <form method="post" asp-action="EditFullName" class="card border-secondary mt-5 w-50">
        <input asp-for="email" hidden="" />
        <input asp-for="passwordOf" hidden="" />
        <input asp-for="roleOf" hidden="" />
        <div class="card-header d-flex justify-content-between align-items-center">
            <p class="m-0">Изменение имени и фамилии</p>
            <a class="btn btn-outline-secondary" asp-controller="User" asp-action="Profile"><i class="bi bi-box-arrow-left"></i></a>
        </div>

        <div class="card-body">
            <div class="form-group">
                <div class="mt-2">
                    <label asp-for="firstname" class="form-label"></label>
                    <input asp-for="firstname" type="text" class="form-control" placeholder="Введите имя">
                    <span class="text-danger" style="font-size: 14px;" asp-validation-for="firstname"></span>
                </div>

                <div class="mt-2 mb-4">
                    <label asp-for="lastname" class="form-label"></label>
                    <input asp-for="lastname" type="text" class="form-control" placeholder="Введите фамилию">
                    <span class="text-danger" style="font-size: 14px;" asp-validation-for="lastname"></span>
                </div>

                <div class="modal-footer mt-2">
                    <button type="submit" class="btn btn-primary">Обновить</button>
                </div>
            </div>
        </div>
    </form>
</div>