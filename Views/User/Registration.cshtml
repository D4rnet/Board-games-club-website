@model RegistrationData
@{
    ViewData["Title"] = "Регистрация";
}

<div class="alignMiddle">
    <form method="post" class="card border-secondary mb-3 mt-5" style="max-width: 20rem; width: 500px;">
        <div class="card-header d-flex justify-content-between align-items-center">
            <p class="m-0">Регистрация</p>
            <a class="btn btn-outline-secondary" asp-controller="User" asp-action="Authorization"><i class="bi bi-box-arrow-left"></i></a>
        </div>

        <div class="card-body">
            <div class="form-group">
                <div class="mt-2">
                    <label asp-for="email" class="form-label"></label>
                    <input asp-for="email" type="email" class="form-control" placeholder="Введите электронную почту">
                    <span class="text-danger" style="font-size: 14px;" asp-validation-for="email"></span>
                </div>

                <div class="mt-2">
                    <label asp-for="passwordOf" class="form-label"></label>
                    <input asp-for="passwordOf" type="password" class="form-control" placeholder="Введите пароль">
                    <span class="text-danger" style="font-size: 14px;" asp-validation-for="passwordOf"></span>
                </div>

                <div class="mt-2">
                    <label asp-for="passwordСonfirm" class="form-label"></label>
                    <input asp-for="passwordСonfirm" type="password" class="form-control" placeholder="Повторно введите пароль">
                    <span class="text-danger" style="font-size: 14px;" asp-validation-for="passwordСonfirm"></span>
                </div>

                <div class="mt-2">
                    <label asp-for="firstname" class="form-label"></label>
                    <input asp-for="firstname" type="text" class="form-control" placeholder="Введите имя">
                    <span class="text-danger" style="font-size: 14px;" asp-validation-for="firstname"></span>
                </div>

                <div class="mt-2">
                    <label asp-for="lastname" class="form-label"></label>
                    <input asp-for="lastname" type="text" class="form-control" placeholder="Введите фамилию">
                    <span class="text-danger" style="font-size: 14px;" asp-validation-for="lastname"></span>
                </div>

                <div class="modal-footer mt-4 d-flex flex-column flex-column align-items-center">
                    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
                </div>
            </div>
        </div>
    </form>
</div>