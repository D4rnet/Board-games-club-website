@model AuthorizedData
@{
    ViewData["Title"] = "Авторизация";
}

<div class="alignMiddle">
    <form method="post" class="card border-secondary mb-3" style="max-width: 20rem;">
        <div class="card-header d-flex justify-content-between align-items-center">
            <p class="m-0">Авторизация</p>
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Main"><i class="bi bi-box-arrow-left"></i></a>
        </div>

        <div class="card-body">
            <div class="form-group">
                <div class="mt-2">
                    <label asp-for="email" class="form-label"></label>
                    <input asp-for="email" type="email" class="form-control" placeholder="Введите электронную почту">
                </div>

                <div class="mt-2 mb-4">
                    <label asp-for="passwordOf" class="form-label">Пароль</label>
                    <input asp-for="passwordOf" type="password" class="form-control" placeholder="Введите пароль">
                </div>

                <span class="text-danger" style="font-size: 14px;" asp-validation-for="email"></span>

                <div class="modal-footer mt-2 d-flex flex-column align-items-center">
                    <button type="submit" class="btn btn-primary">Авторизоваться</button>
                </div>
            </div>

            <p class="mt-3 mb-0" style="font-size: 12px;">Ещё не зарегистрированы? <a asp-controller="User" asp-action="Registration">Зарегистрироваться</a></p>
        </div>
    </form>
</div>