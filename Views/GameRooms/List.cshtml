@model IEnumerable<GameRoom>
@{
    ViewData["Title"] = "Список игровых комнат";
}

<h1 class="text-center m-5">Игровые комнаты</h1>

<div class="roomsGrid">
    @{
        if (LogInUser.email == string.Empty)
        {
            foreach (var obj in Model)
            {
                <a asp-controller="User" asp-action="Authorization" class="hoverCard btn card text-white bg-secondary p-0">
                    <div class="card-img-top" style="background: url(@obj.imageOf); width: 100%; height: 100%; background-position: 50% 50%; background-size: cover; "></div>
                    <div class="card-body d-flex justify-content-between p-2">
                        <div class="d-flex mx-2">
                            <i class="bi bi-people-fill"></i>
                            @{
                                if (obj.places < 5)
                                {
                                    <p class="card-text my-0 mx-1">
                                        @obj.places места
                                    </p>
                                }
                                else
                                {
                                    <p class="card-text my-0 mx-1">
                                        @obj.places мест
                                    </p>
                                }
                            }
                        </div>
                        <p class="card-text my-0 mx-2">@obj.rentPrice BYN/час</p>
                    </div>
                </a>
            }
        }
        else
        {
            foreach (var obj in Model)
            {
                <a  asp-controller="GameRooms" asp-action="Rent" asp-route-id="@obj.number" class="hoverCard btn card text-white bg-secondary p-0">
                    <div class="card-img-top" style="background: url(@obj.imageOf); width: 100%; height: 100%; background-position: 50% 50%; background-size: cover; "></div>
                    <div class="card-body d-flex justify-content-between p-2">
                        <div class="d-flex mx-2">
                            <i class="bi bi-people-fill"></i>
                            @{
                                if (obj.places < 5)
                                {
                                    <p class="card-text my-0 mx-1">
                                        @obj.places места
                                    </p>
                                }
                                else
                                {
                                    <p class="card-text my-0 mx-1">
                                        @obj.places мест
                                    </p>
                                }
                            }
                        </div>
                        <p class="card-text my-0 mx-2">@obj.rentPrice BYN/час</p>
                    </div>
                </a>
            }
        }
    }

</div>